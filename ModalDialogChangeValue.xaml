<Window	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="Viruses.ModalDialogChangeValue"
		mc:Ignorable="d"
		Title="Change value" MaxWidth="400" MaxHeight="190" MinWidth="400" MinHeight="190" Topmost="True" ShowInTaskbar="False" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
	<Grid Background="White">
		<Button x:Name="OKButton" Content="OK" Margin="10,0,0,10" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" MinWidth="180" MinHeight="20"/>
		<Button x:Name="CancelButton" Content="Cancel" Margin="0,0,10,10" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Click="CancelButton_Click" MinWidth="180" MinHeight="20"/>
		<TextBox x:Name="ValueInput" Height="25" Margin="67,10,68,0" TextWrapping="Wrap" VerticalAlignment="Top" GotFocus="ValueInput_GotFocus" LostFocus="ValueInput_LostFocus" VerticalContentAlignment="Center"/>
		<Label x:Name="ValuePlaceholder" Content="Name" Margin="68,10,67,0" Foreground="#B2505050" Height="25" VerticalAlignment="Top" IsHitTestVisible="False" VerticalContentAlignment="Center"/>
	</Grid>
</Window>
