	<Grid Background="White">
		<Button Content="OK" Margin="10,0,0,10" Click="OKButton_Click" FontSize="10" Height="20" HorizontalAlignment="Left" Width="180" VerticalAlignment="Bottom"/>
		<Button Content="Cancel" Margin="0,0,10,10" Click="CancelButton_Click" FontSize="10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="180"/>
