		<TextBox x:Name="VictimNameInput" Height="25" Margin="72,40,63,0" TextWrapping="Wrap" VerticalAlignment="Top" GotFocus="VictimNameInput_GotFocus" LostFocus="VictimNameInput_LostFocus" SnapsToDevicePixels="True" VerticalContentAlignment="Center"/>
		<Label x:Name="VictimNamePlaceholder" Content="Victim name" Margin="72,40,63,0" Foreground="#B2505050" Height="25" VerticalAlignment="Top" IsHitTestVisible="False" Background="#00000000" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
	</Grid>
</Window>
