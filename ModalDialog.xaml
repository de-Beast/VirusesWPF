<Window	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="Viruses.ModalDialog"
		mc:Ignorable="d"
		Title="Window" MaxWidth="400" MaxHeight="190" MinWidth="400" MinHeight="190" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Topmost="True">
	<Grid Background="White">
		<Button Content="OK" Margin="10,0,0,10" Click="OKButton_Click" FontSize="10" Height="20" HorizontalAlignment="Left" Width="180" VerticalAlignment="Bottom" MinWidth="180" MinHeight="20"/>
		<Button Content="Cancel" Margin="0,0,10,10" Click="CancelButton_Click" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" MinHeight="20" MinWidth="180"/>
		<TextBox x:Name="ValueInput" Height="25" Margin="67,10,68,0" TextWrapping="Wrap" VerticalAlignment="Top" GotFocus="NameInput_GotFocus" LostFocus="NameInput_LostFocus" VerticalContentAlignment="Center"/>
		<Label x:Name="ValuePlaceholder" Content="Name" Margin="68,10,68,0" Foreground="#B2505050" Height="25" VerticalAlignment="Top" IsHitTestVisible="False" VerticalContentAlignment="Center"/>
	</Grid>
</Window>
